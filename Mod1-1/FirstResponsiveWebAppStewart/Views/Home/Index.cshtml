@model WebAppStewart
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>First Responsive Web App</title>
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </head>
    <body>
        <div class="container" id="container">
            <div class="row">
                <form asp-action="Index" method="post" class="form-group">
                    <div class="row">
                        <label asp-for="Name" class="col-form-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="row">
                        <label asp-for="BirthYear" class="col-form-label">BirthYear</label>
                        <input asp-for="BirthYear" class="form-control" />
                    </div>
                    <div class="row">
                        <label class="col-form-label">Age</label>
                        <input value="@ViewBag.YourAge" class="form-control" readonly />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-danger">Clear</a>
                </form>
            </div>
        </div>
    </body>
</html>